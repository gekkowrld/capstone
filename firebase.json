{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"hosting": {
			"port": 5033
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true,
		"auth": {
			"port": 9099
		},
		"firestore": {
			"port": 8080
		},
		"database": {
			"port": 9000
		},
		"storage": {
			"port": 9199
		}
	},
	"database": {
		"rules": "database.rules.json"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"storage": {
		"rules": "storage.rules"
	},
	"remoteconfig": {
		"template": "remoteconfig.template.json"
	}
}
