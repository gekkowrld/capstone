service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      allow read;
    }

    match /{allPaths=**} {
      allow read, write: if request.auth != null &&
                   request.auth.token.admin == true &&
                   request.auth.token.rules_version == '2';
    }
  }
}
